            <h3>Bookings:</h3>
            <% @airplane.bookings.each do |booking| %>
              <!-- TODO -->
              <!-- List airplane's bookings -->
            <% end %>
          </div>
        <% end %>
      </div>
      <div class="col-lg-4">
        <div class="container bg-light p-4 rounded-lg my-3">
          <h6>Book this plane!</h6>

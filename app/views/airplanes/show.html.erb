<!-- NAVBAR -->
<div class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container-fluid justify-content-between">
    <%= link_to "Fly Me Now", airplanes_path, class:"navbar-brand text-dark" %>
    <form class="form-inline my-2 my-lg-0" action="/airplanes">
      <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search" name="model" value="<%= params[:model] %>">
      <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
      <% if policy(Airplane).create? %>
        <button class="btn btn-outline-primary my-2 my-sm-0 mx-2"><%= link_to "Add Airplane", new_airplane_path %></button>
      <% end %>
    </form>
  </div>
</div>
<!-- MAIN CONTENT -->
